<!--main content-->
<div class="main-content">
  <div class="container">
    <div class="row">
      <!-- Add Post Button -->
      <div class="content col-md-1 col-sm-12 col-xs-12">
        <button id="add-post-button" onclick="openPostModal()">
          +
        </button>
      </div>

      <div class="content col-md-7 col-sm-12 col-xs-12">

        <!-- 포스트 목록 구역 -->


        <div class="section-block" style="height: 1000px; overflow: auto;">

          <div class="posting">

            <!-- 포스트 작성 창 -->
            <div id="post-modal" class="modal" style="height: 1100px">
              <div class="modal-content" style="height: 620px">
                <div style="text-align: right">

                  <button id="add-post-button" onclick="closePostModal()">
                    x
                  </button>
                </div>


                <div id="table-container">
                  <table border = "1" id="myTable" class="table">
                    <tr class="price">
                      <td style="width: 50px;">날짜</td>
                      <td><input type="date" name="date" id="date" required></td>
                    </tr>
                    <tr class="price">
                      <td style="width: 50px;">금액</td>
                      <td><input type="text" name="price" id="price" required></td>
                    </tr>
                    <tr>
                      <td style="width: 50px;">내용</td>
                      <td>
                            <textarea
                                    class="Incontent"
                                    name="content"
                                    id="post-content"
                                    cols="30"
                                    rows="10"
                                    placeholder="포스트 내용을 입력하세요..."
                                    required>
                          </textarea>
                      </td>
                    </tr>
                    <tr>
                      <!-- 사진 업로드를 위한 입력 필드 -->
                      <td></td>
                      <td>
                        <!-- 이미지 미리보기를 위한 영역 -->
                        <div id="imagePreview"></div>
                      </td>
                    </tr>
                    <tr>
                      <td style="width: 50px;">사진</td>
                      <td>
                        <input type="file" name="fileInput" id="fileInput" accept="image/* required">
                      </td>
                    </tr>
                  </table>
                </div>
                <button onclick="savePost()">게시물 저장</button>



              </div>
            </div>
            <div id="thread-container"></div>
            <!-- 모달 구현 부분 -->
            <div id="myModal" class="modal" style="height: 1100px">
              <div id="modalContent" class="modal-content"></div>
            </div>


            <!-- 포스팅 목록 표시 됨 -->


            <script>



            </script>


            <div id="comment-modal" class="modal">
              <div class="modal-content">
                    <span class="close" onclick="closeCommentModal()"
                    >&times;</span
                    >
                <div id="post-content-container"></div>
                <textarea
                        id="comment-content"
                        placeholder="댓글을 입력하세요..."
                ></textarea>
                <button onclick="saveComment()">댓글 저장</button>
                <div id="comments-container"></div>
              </div>
            </div>
          </div>

        </div>


        <!-- 포스팅 목록 올라감 -->
        <ul id="postList">
          <!-- 포스팅 목록 -->
        </ul>
      </div>
      <!--/tabs-->
      <!--/main content-->
      <!--sidebar-->

      <div class="content col-md-4 col-sm-12 col-xs-12">
        <div class="section-block summary">
          <h1 class="section-title">{{ nickname }}</h1>
          <div class="profile-contents">
            <img
                    src="{{ user_image }}"
                    class="profile-image img responsive"
                    alt="로그인 해주세요"
            />
            {% if loggedIn %}
            <h2 class="user-ranking">{{ranking}}</h2>
            <a href="/auth/logout"> 로그아웃 하기</a>
            <p></p>
            <a
                    href="/auth/unlink"
                    class="btn_unlink"
                    onclick="return confirmUnlink();"
            >회원 탈퇴</a
            >

            <script>
              function confirmUnlink() {
                return confirm("회원 탈퇴를 진행하시겠습니까?");
              }
            </script>

            {% endif %} {% if not loggedIn %}
            <a href="/auth/kakao" class="btn btn-contact">
              <img
                      src="img/kakao_login_medium_narrow.png"
                      alt="Kakao Login"
              />
            </a>
            {% endif %}
          </div>
        </div>
        <div class="section-block">
          <!-- <h1 class="section-title">REWARDS</h1> -->
          <!--reward blocks-->
          <div class="mypage-block">
            <!-- <span><i class="fa fa-users"></i> 180 backers</span> -->
            <a href="/mypage" class="btn btn-mypage">MY PAGE</a>
          </div>
        </div>
        <div class="section-block">
          <div class="mypage-block">
            <!-- 버튼이 mypage 버튼과 같은 디자인이라 그냥 btn-mypage라고 똑같이 썼음 -->
            <a href="/challenge" class="btn btn-mypage">CHALLENGE</a>
          </div>
        </div>
      </div>
      <!--/sidebar-->
